---
import { Code } from 'astro/components';
import Layout from '../layouts/Layout.astro';
import Company from '../components/Company.astro';
import CompaniesSection from '../components/CompaniesSection.astro';
import BenefitsSection from '../components/BenefitsSection.astro';
import BenefitCard from '../components/BenefitCard.astro';
import Hero from '../components/Hero.astro';
---

<Layout title="BEM — Block Element Modifier">
	<section>
		<Hero/>
	</section>
	
	<section>
		<div class="max-w-6xl mx-auto px-4 sm:px-6 pb-12 grid sm:grid-cols-2 gap-24">
			<div>
				<p class="text-gray-600">Classic CSS</p>
				<Code lang="scss" code={`#opinions_box h1 {
	margin: 0 0 8px 0;
	text-align: center;
}

#opinions_box {
	p.more_pp {
		a {
			text-decoration: underline;
		}
	}

	input[type="text"] {
		border: 1px solid #ccc!important;
	}
}`}/>
			</div>
			<div>
				<p class="text-gray-600">BEM</p>
				<Code lang="scss" code={`.opinions_box {
	margin: 0 0 8px 0;
	text-align: center;

	&__view-more {
		text-decoration: underline;
	}

	&__text-input {
		border: 1px solid #ccc;
	}

	&--is-inactive {
		color: gray;
	}
}`}/>
			</div>
		</div>
	</section>

	<section>
		<BenefitsSection>
			<BenefitCard heading="Easy" description="To use BEM, you only need to employ BEM’s naming convention."/>
			<BenefitCard heading="Modular" description="Independent blocks and CSS selectors make your code reusable and modular."/>
			<BenefitCard heading="Flexible" description="Using BEM, methodologies and tools can be recomposed and configured the way you like."/>
		</BenefitsSection>
	</section>

	<section>
		<CompaniesSection>
			<Company href="https://yandex.com" name="Yandex" src={import("../assets/companies/yandex.png")}/>
			<Company href="http://www.jetbrains.com" name="JetBrains" src={import("../assets/companies/jetbrains.png")}/>
			<Company href="http://factory.mn" name="Manufactura" src={import("../assets/companies/manufactura.png")}/>
			<Company href="http://eu.ideus.biz" name="iDeus" src={import("../assets/companies/ideus.png")}/>
			<Company href="http://alfabank.com" name="Alfa-Bank" src={import("../assets/companies/alfabank.png")}/>
			<Company href="http://edster.ru" name="Edster" src={import("../assets/companies/edster.png")}/>
			<Company href="http://www.wimdu.com" name="Wimdu" src={import("../assets/companies/wimdu.png")}/>
			<Company href="http://megafon.com" name="Megafon" src={import("../assets/companies/megafon.png")}/>
			<Company href="http://decaf.de" name="Decaf" src={import("../assets/companies/decaf.png")}/>
			<Company href="http://epam.com" name="EPAM" src={import("../assets/companies/epam.png")}/>
			<Company href="https://renuo.ch" name="Renuo" src={import("../assets/companies/renuo.png")}/>
		</CompaniesSection>
	</section>
</Layout>

<style is:global>
.astro-code {
	padding: 10px;
	border-radius: 10px;
}

code {
  counter-reset: step;
  counter-increment: step 0;
}

code .line::before {
  content: counter(step);
  counter-increment: step;
  width: 1rem;
  margin-right: 1.5rem;
  display: inline-block;
  text-align: right;
  color: rgba(115,138,148,.4)
}
</style>