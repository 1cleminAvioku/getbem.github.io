---
import { Code } from 'astro/components';
import Layout from '../layouts/Layout.astro';
import Company from '../components/Company.astro';
import CompaniesSection from '../components/CompaniesSection.astro';
---

<Layout title="BEM — Block Element Modifier">
	<section>
		<div class="text-center max-w-6xl mx-auto px-4 sm:px-6 pt-32 pb-12 md:pt-40 md:pb-20">
			<h1 class="text-3xl md:text-5xl font-bold mb-8">
				<span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-teal-400">BEM</span> — is a methodology that helps you to create reusable components and code sharing in front&#8209;end development
			</h1>

			<a href="/introduction" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-8 rounded-full">
				Learn why it's better
			</a>
		</div>
	</section>
	
	<section>
		<div class="max-w-6xl mx-auto px-4 sm:px-6 pb-12 grid sm:grid-cols-2 gap-24">
			<div>
				<p class="text-gray-600">Classic CSS</p>
				<Code lang="scss" theme="dracula-soft" code={`#opinions_box h1 {
	margin: 0 0 8px 0;
	text-align: center;
}

#opinions_box {
	p.more_pp {
		a {
			text-decoration: underline;
		}
	}
	input[type="text"] {
		border: 1px solid #ccc!important;
	}
}
`}/>
			</div>
			<div>
				<p class="text-gray-600">BEM</p>
				<Code lang="scss" theme="dracula-soft" code={`.opinions_box{
	margin: 0 0 8px 0;
	text-align: center;

	&__view-more {
		text-decoration: underline;
	}

	&__text-input {
		border: 1px solid #ccc;
	}

	&--is-inactive {
		color: gray;
	}
}`}/>
			</div>
		</div>
	</section>

	<section>
		<div class="grid gap-6 grid-cols-1 sm:grid-cols-3 max-w-6xl mx-auto px-4 py-12 items-start">
			<div class="text-center relative flex flex-col items-center p-6 bg-white rounded shadow-xl">
				<h2 class="text-xl font-bold leading-snug tracking-tight mb-1 bg-clip-text text-transparent bg-gradient-to-r from-green-500 to-green-400">Easy</h2>
				<p class="text-gray-600">To use BEM, you only need to employ BEM’s naming convention.</p>
			</div>

			<div class="text-center relative flex flex-col items-center p-6 bg-white rounded shadow-xl">
				<h2 class="text-xl font-bold leading-snug tracking-tight mb-1 bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-teal-400">Modular</h2>
				<p class="text-gray-600">Independent blocks and CSS selectors make your code reusable and modular.</p>
			</div>

			<div class="text-center relative flex flex-col items-center p-6 bg-white rounded shadow-xl">
				<h2 class="text-xl font-bold leading-snug tracking-tight mb-1 bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-red-400">Flexible</h2>
				<p class="text-gray-600">Using BEM, methodologies and tools can be recomposed and configured the way you like.</p>
			</div>
		</div>
	</section>

	<section>
		<CompaniesSection>
			<Company href="https://yandex.com" name="Yandex" src={import("../assets/companies/yandex.png")}/>
			<Company href="http://www.jetbrains.com" name="JetBrains" src={import("../assets/companies/jetbrains.png")}/>
			<Company href="http://factory.mn" name="Manufactura" src={import("../assets/companies/manufactura.png")}/>
			<Company href="http://eu.ideus.biz" name="iDeus" src={import("../assets/companies/ideus.png")}/>
			<Company href="http://alfabank.com" name="Alfa-Bank" src={import("../assets/companies/alfabank.png")}/>
			<Company href="http://edster.ru" name="Edster" src={import("../assets/companies/edster.png")}/>
			<Company href="http://www.wimdu.com" name="Wimdu" src={import("../assets/companies/wimdu.png")}/>
			<Company href="http://megafon.com" name="Megafon" src={import("../assets/companies/megafon.png")}/>
			<Company href="http://decaf.de" name="Decaf" src={import("../assets/companies/decaf.png")}/>
			<Company href="http://epam.com" name="EPAM" src={import("../assets/companies/epam.png")}/>
			<Company href="https://renuo.ch" name="Renuo" src={import("../assets/companies/renuo.png")}/>
		</CompaniesSection>
	</section>
</Layout>

<style is:global>
.astro-code {
	padding: 10px;
	border-radius: 10px;
}

code {
  counter-reset: step;
  counter-increment: step 0;
}

code .line::before {
  content: counter(step);
  counter-increment: step;
  width: 1rem;
  margin-right: 1.5rem;
  display: inline-block;
  text-align: right;
  color: rgba(115,138,148,.4)
}
</style>